@model IEnumerable<WebApplication2.Models.CustomerModels>


@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
    @Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" })
</p>

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Phone Number</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id }, new { })</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.MembershipType.Name</td>
                <td>@Html.ActionLink("Delete", "Delete", "Customer", new { id = customer.Id }, new { @class = "btn btn-danger delete-link" })</td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.delete-link').on('click', function (e) {
                e.preventDefault();
                var deleteLink = $(this);

                // Show confirmation dialog
                if (confirm("Are you sure you want to delete this customer?")) {
                    // If user clicks 'OK', proceed with the delete action
                    window.location.href = deleteLink.attr('href');
                } else {
                    // If user clicks 'Cancel', do nothing
                    return false;
                }
            });
        });
    </script>
}